NAME := school
SRC := main.c school.c
CC := gcc
CFLAGS := -Wall -Werror -Wextra -pedantic
RM := rm -f

all: $(NAME)

$(NAME):
	$(CC) $(CFLAGS) -c main.c school.c
	$(CC) main.o school.o -o $(NAME)

clean:
	$(RM) *~

oclean:
	$(RM) main.o school.o

fclean: clean oclean
	$(RM) $(NAME)

re: fclean all

main.o: main.c m.h
school.o: school.c m.h
