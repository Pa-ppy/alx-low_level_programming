CC := gcc
CFLAGS := -Wall -Werror -Wextra -pedantic
SRC := main.c school.c
OBJ := $(SRC:.c=.o)
NAME := school

all: $(NAME)

$(NAME): main.o school.o
	$(CC) main.o school.o -o $(NAME)

main.o: main.c m.h
	$(CC) -c main.c -o main.o $(CFLAGS)

school.o: school.c m.h
	$(CC) -c school.c -o school.o $(CFLAGS)

clean:
	rm -f *~

fclean:
	rm -f *~ $(NAME) main.o school.o

re: fclean all
